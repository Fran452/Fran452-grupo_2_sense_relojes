<!DOCTYPE html>
<html>
    <head>
        <%-include('./partials/head') %>
        <link rel="stylesheet" href="/css/styleRegister.css">
        
    </head>
    <body>
        <%-include('./partials/header') %>
        <main>
            <form action="/user/" method="POST" enctype="multipart/form-data">
                <div class = "formuItem">
                    <label>Nombre y Apellido</label>
                    <input type="text" name="nombre" id = 'nombre' class="inputt" placeholder="apellido, nombre" required >
                    <% if(locals.error && error.nombre ){ %>
                        <p class="error"> <%= error.nombre.msg %> </p>
                    <% } %>  
                    <p class="error" id = 'nombreError'> </p>
                </div>
                <div class = "formuItem">
                    <label>Email</label>
                    <input type="email" name="email" id = 'email' class="inputt" placeholder="tumail@dominio.com" required>
                    <% if(locals.error && error.email){ %>
                        <p class="error"> <%= error.email.msg %> </p>
                    <% } %>
                    <p class="error" id = 'errorMail'> </p>
                </div>
                <div class = "formuItem">
                    <label>Telefono</label>
                    <input type="number" name="telefono" id = 'telefono' class="inputt" placeholder="11 56223221" required>
                    <% if(locals.error && error.telefono){ %>
                        <p class="error"> <%= error.telefono.msg %> </p>
                    <% } %>
                    <p class="error" id = 'telefonoError'> </p>
                </div>
                <div class = "formuItem">
                    <label>Fecha de Nacimiento</label>
                    <input type="date" name="fechaDeNacimiento" id="birth_date" class="inputt">
                    <% if(locals.error && error.fechaDeNacimiento){ %>
                        <p class="error"> <%= error.fechaDeNacimiento.msg %> </p>
                    <% } %>
                    <p class="error" id = 'errorEdad'> </p>
                </div>
                <div class = "formuItem">
                    <label>Foto de Usuario</label>
                    <input type="file" name="img" class="inputt" accept=".jpg, .png" >
                </div>
                <div class = "formuItem">
                    <label for="contraseña"> elige tu contraseña</label>
                    <input type="password" name="contraseña" id = 'contraseña' placeholder="Elegí tu contraseña" class="inputt"></div>
                    <% if(locals.error && error.contraseña){ %>
                        <p class="error"> <%= error.contraseña.msg %> </p>
                    <% } %>
                    <p class="error" id = 'errorPasword'> </p>
                <div class = "formuItem">
                    <label for="contraseñaConfirm"> repite tu contraseña</label>
                    <input type="password" name="contraseñaConfirm" id = 'contraseñaConfirm' placeholder="Confirmá tu contraseña" class="inputt">
                    <% if(locals.error && error.contraseñaConfirm){ %>
                        <p class="error"> <%= error.contraseñaConfirm.msg %> </p>
                    <% } %>
                    <p class="error" id = 'errorPaswordC'> </p>
                </div>

                <div class = "guardarCook">
                    <label for="guardarCook"> Guardar Cuenta</label>
                    <input type="checkbox" name="guardarCook">
                </div>

                <input type="submit" value="Crear" class="button crear">

                <label class="cuentaRegistrada">¿Ya tenes una cuenta? <a href="/login">Inicia Sesión</a></label>
                <div class="redes">
                    <input class="Facebook" type="submit" value="Ingresar con Facebook">
                    <input class="Google" type="submit" value="Ingresar con Google">
                </div>
                
                
            </form>
        </main>
        <%-include('./partials/footer') %>
        <script src="/js/register.js"></script>
    </body>
</html>