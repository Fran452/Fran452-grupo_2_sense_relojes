<!DOCTYPE html>
<html>
    <head>
        <%-include('./partials/header') %>
        <link rel="stylesheet" href="/css/estiloregistro.css">
        
    </head>
    <body>
        <main>
            <form action="/user/register" method="POST">
                <div class = "formuItem">
                    <label>name</label>
                    <input type="text" name="nombre" class="inputt" placeholder="apellido, nombre" required>
                    <% if(locals.error && error.nombre ){ %>
                        <p class="error"> <%= error.nombre.msg %> </p>
                    <% } %>  
                </div>
                <div class = "formuItem">
                    <label>email</label>
                    <input type="email" name="email" class="input" placeholder="tumail@dominio.com" required>
                    <% if(locals.error && error.email){ %>
                        <p class="error"> <%= error.email.msg %> </p>
                    <% } %>
                </div>
                <div class = "formuItem">
                    <label for="password">password </label>
                    <input type="password" name="contraseña" placeholder="Elegí tu contraseña" class="input"></div>
                    <% if(locals.error && error.contraseña){ %>
                        <p class="error"> <%= error.contraseña.msg %> </p>
                    <% } %>
                <div class = "formuItem">
                    <label for="createad_at"> createad_at</label>
                    <input type="date" name="createad_at">
                </div>
                <div class = "formuItem">
                    <label for="updated_at"> updated_at</label>
                    <input type="date" name="updated_at">
                </div>

                <input type="submit" value="Crear" class="button crear">

                <label class="cuentaRegistrada">¿Ya tenes una cuenta? <a href="/user/login">Inicia Sesión</a></label>

            </form>
        </main>
    </body>
</html>